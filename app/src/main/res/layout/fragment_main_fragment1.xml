<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.MainFragment1">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/etWeather"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:text="设置城市"
        app:layout_constraintStart_toEndOf="@+id/etWeather"
        app:layout_constraintTop_toTopOf="@+id/etWeather" />

    <ListView
        android:id="@+id/lvWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/etWeather"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvWeather_location"
        android:layout_width="236dp"
        android:layout_height="29dp"
        android:textSize="20dp"
        android:layout_marginTop="28dp"
        android:text="当前位置：杭州"
        app:layout_constraintStart_toStartOf="@+id/etWeather"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="388dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvWeather" />

</androidx.constraintlayout.widget.ConstraintLayout>